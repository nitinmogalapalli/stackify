{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:base", "customManagers:biomeVersions"],
	"packageRules": [
		{
			"matchPackagePatterns": ["^@repo/"],
			"enabled": false
		}
	],
	"updateInternalDeps": true,
	"rangeStrategy": "bump",
	"automerge": true,
	"npm": {
		"fileMatch": ["(^|/)package\\.json$"]
	}
}
