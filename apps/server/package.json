{
	"name": "server",
	"type": "module",
	"version": "0.0.1",
	"main": "src/index.ts",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b --noEmit",
		"clean": "git clean -xdf .cache .turbo dist node_modules",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "tsx watch src/index.ts",
		"start": "node dist/index.js"
	},
	"dependencies": {
		"@hono/node-server": "^1.14.4",
		"@hono/trpc-server": "^0.4.0",
		"@repo/api": "workspace:*",
		"@repo/auth": "workspace:*",
		"@repo/db": "workspace:*",
		"@trpc/server": "catalog:",
		"better-auth": "catalog:",
		"dotenv": "catalog:",
		"hono": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "catalog:",
		"@repo/config": "workspace:*",
		"@types/node": "catalog:",
		"alchemy": "catalog:",
		"tsdown": "^0.16.5",
		"tsx": "^4.19.2",
		"typescript": "catalog:",
		"wrangler": "catalog:"
	}
}
