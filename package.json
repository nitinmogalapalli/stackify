{
	"name": "repo",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"auth:generate": "turbo -F @repo/auth auth:generate",
		"build": "turbo build",
		"check-env": "node ./scripts/check-env.ts",
		"check-types": "turbo check-types",
		"clean": "git clean -xdf .alchemy .turbo node_modules",
		"clean:workspaces": "turbo clean",
		"db:generate": "turbo -F @repo/db db:generate",
		"db:migrate": "turbo -F @repo/db db:migrate",
		"db:push": "turbo -F @repo/db db:push",
		"db:studio": "turbo -F @repo/db db:studio",
		"deploy": "alchemy deploy",
		"destroy": "alchemy destroy",
		"dev": "alchemy dev",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"fix": "biome check --write .",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"lint": "biome lint . && node ./scripts/check-env.ts",
		"lint:fix": "biome lint --write .",
		"lint:ws": "pnpm dlx sherif@latest -r root-package-dependencies",
		"postinstall": "pnpm lint:ws",
		"prepare": "husky",
		"ui-add": "turbo run ui-add"
	},
	"dependencies": {
		"dotenv": "catalog:",
		"fast-glob": "^3.3.3",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.7",
		"@cloudflare/workers-types": "catalog:",
		"@types/node": "catalog:",
		"alchemy": "catalog:",
		"commitizen": "^4.3.1",
		"commitlint": "^20.1.0",
		"cz-conventional-changelog": "^3.3.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"turbo": "^2.6.1"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "pnpm@10.23.0",
	"volta": {
		"node": "25.2.1",
		"pnpm": "10.23.0"
	}
}
