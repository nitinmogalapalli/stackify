	},
	"dependencies": {
		"@better-auth/expo": "catalog:",
		"@repo/db": "workspace:*",
		"better-auth": "catalog:",
		"dotenv": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@repo/config": "workspace:*",
		"dotenv-cli": "^10.0.0"
	},
	"peerDependencies": {
		"typescript": "catalog:"
	}
}
